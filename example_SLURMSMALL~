#!/bin/bash
#SBATCH -N 1
#SBATCH --ntasks-per-node=16
#SBATCH -n 16
#SBATCH --exclusive
#SBATCH --time=12:00:00 
#SBATCH -J Flux
#SBATCH -o Eddy.%J.out
#mail me when finished                                            
#SBATCH --mail-type=END                                           
